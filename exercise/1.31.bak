#lang planet neil/sicp

; 实现累乘的过程，如阶乘

(define (identity x) x)
(define (inc n) (+ n 1))

; 线性递归法
(define (product term next a b)
  (if (> a b)
      1
      (* (term a)
         (product term next (next a) b))))



; 线性迭代法
(define (product-i term a next b)
  (define (iter a result)
    (if (> a b)
        result
        (iter (next a) (* (term a) result))))
  (iter a 1))